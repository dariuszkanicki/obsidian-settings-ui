{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "rootDir": "src",
    "outDir": "dist/lib",
    "declaration": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "composite": true,
    "skipLibCheck": true,
    "lib": ["ES2021", "DOM"],
    "types": ["node"]
  },
  "include": ["src"]
}
